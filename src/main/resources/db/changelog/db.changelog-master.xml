    <changeSet id="1" author="rublevskaya">
        <createTable tableName="hotels">
            <column name="id" type="BIGINT" autoIncrement="true"><constraints primaryKey="true"/></column>
            <column name="name" type="VARCHAR(255)"><constraints nullable="false"/></column>
            <column name="description" type="VARCHAR(2000)"/>
            <column name="brand" type="VARCHAR(255)"/>
            <column name="house_number" type="VARCHAR(50)"/>
            <column name="street" type="VARCHAR(255)"/>
            <column name="city" type="VARCHAR(255)"/>
            <column name="country" type="VARCHAR(255)"/>
            <column name="post_code" type="VARCHAR(50)"/>
            <column name="phone" type="VARCHAR(50)"/>
            <column name="email" type="VARCHAR(255)"/>
            <column name="check_in" type="VARCHAR(10)"/>
            <column name="check_out" type="VARCHAR(10)"/>
        </createTable>

        <createTable tableName="hotel_amenities">
            <column name="hotel_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_hotel_amenity" referencedTableName="hotels" referencedColumnNames="id"/>
            </column>
            <column name="amenity" type="VARCHAR(255)"><constraints nullable="false"/></column>
        </createTable>
    </changeSet>

